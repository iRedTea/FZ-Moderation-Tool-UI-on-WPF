                            <EventTrigger RoutedEvent="MouseLeave">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#FF87FF87" 
                                    Storyboard.TargetProperty="(PasswordBox.Background).(SolidColorBrush.Color)" 
